{
  "name": "react-node-boilerplate",
  "version": "0.0.0",
  "description": "Starting point for a single-page React app running on a Node.js server",
  "license": "ISC",
  "engines": {
    "node": "10"
  },
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "watch": "nodemon -r dotenv/config server/index.js",
    "debug": "nodemon -r dotenv/config --inspect server/index.js",
    "build": "webpack -p --config webpack.prod.js",
    "postinstall": "if test \"$NODE_ENV\" = \"production\"; then npm run build; fi",
    "lint": "eslint --ext .js,.jsx ."
  },
  "dependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-hot-loader": "^1.4.2",
    "css-loader": "^1.0.0",
    "express": "^4.16.3",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.3",
    "morgan": "^1.9.1",
    "node-sass": "^4.9.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-hot-loader": "^4.3.11",
    "sass-loader": "^7.1.0",
    "terser-webpack-plugin": "^1.1.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.2",
    "webpack-merge": "^4.1.4"
  },
  "devDependencies": {
    "dotenv": "^6.0.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "nodemon": "^1.18.4"
  }
}
